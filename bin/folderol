use strict;
use warnings;
use vars qw($ME);
use vars qw($opt_V $opt_f $opt_g $opt_h);

use File::Basename qw(basename);
use Folderol;
use Getopt::Std qw(getopts);
use YAML qw(LoadFile);

$ME = basename($0);

# ----------------------------------------------------------------------
# Options:
# -f Fetch only
# -f Generate only
# -h HELP
#
# By default, folderol both fetches and generates
# ----------------------------------------------------------------------
getopts('fghV');
$opt_f = ! $opt_f;
$opt_f = ! $opt_g;

# ----------------------------------------------------------------------
# Print help message and exit, if -h, or version and exit, if -V
# ----------------------------------------------------------------------
if ($opt_h) {
    print Folderol->help_message($ME);
    exit 0;
}

if ($opt_V) {
    print "$ME v", $Folderol::VERSION, "\n";
    exit 0;
}

# ----------------------------------------------------------------------
# The main event
# ----------------------------------------------------------------------
for my $conf (@ARGV) {
    my @sites = LoadFile($conf);

    for my $site (@sites) {
        my $folderol = Folderol->new($site);
        Folderol::Logger->info("Loading " . $folderol->name);

        if ($opt_f) {
            for my $feed ($folderol->feeds) {
                $feed->fetch($folderol->cache_dir) and
                    $folderol->parse($feed);
            }
        }
        else {
            Folderol::Logger->debug("Skipping fetch step");
        }

        if ($opt_f) {
            for my $dest ($folderol->destinations) {
                # ...
            }
        }
        else {
            Folderol::Logger->debug("Skipping generate step");
        }
    }
}

exit;
